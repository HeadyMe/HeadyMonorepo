{
  "mcpServers": {
    "heady-router": {
      "command": "node",
      "args": [
        "./mcp-servers/heady-router/server.js"
      ],
      "governance": {
        "requireConfirmation": ["heady_write_file", "heady_edit_file", "heady_run_command"],
        "auditAll": true,
        "integrateHeadyMaid": true
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspaces",
        "/shared"
      ],
      "governance": {
        "requireConfirmation": ["write_file", "delete_file", "move_file"],
        "allowedPaths": ["./src", "./public", "./backend"],
        "deniedPaths": [".env", ".env.admin", "*.key", "*.pem"]
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ],
      "governance": {
        "requireConfirmation": ["fetch"],
        "allowedDomains": ["headysystems.com", "api.headysystems.com", "localhost"]
      }
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${DATABASE_URL}"
      ],
      "governance": {
        "requireConfirmation": ["execute_query", "modify_schema"],
        "readOnly": false
      }
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git"
      ],
      "governance": {
        "requireConfirmation": ["commit", "push", "merge"],
        "allowedBranches": ["main", "develop", "feature/*"]
      }
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ]
    },
    "cloudflare": {
      "command": "npx",
      "args": [
        "-y",
        "@cloudflare/mcp-server-cloudflare"
      ],
      "env": {
        "CLOUDFLARE_API_TOKEN": "${COPILOT_MCP_CLOUDFLARE_API_TOKEN}",
        "CLOUDFLARE_ACCOUNT_ID": "${COPILOT_MCP_CLOUDFLARE_ACCOUNT_ID}"
      }
    },
    "heady-cleanup": {
      "command": "node",
      "args": [
        "./mcp-servers/heady-cleanup/server.js"
      ],
      "description": "Cleanup and storage organization service"
    },
    "heady-monorepo": {
      "command": "node",
      "args": [
        "./mcp-servers/heady-monorepo/server.js"
      ],
      "description": "Monorepo merge and push service"
    },
    "heady-brain": {
      "command": "node",
      "args": [
        "./mcp-servers/heady-brain/server.js"
      ],
      "description": "AI logic and workflow intelligence service"
    },
    "heady-drupal-mcp": {
      "command": "node",
      "args": [
        "./mcp-servers/heady-drupal-mcp/server.js"
      ],
      "governance": {
        "requireConfirmation": ["drupal_pull", "drupal_push"]
      }
    }
  },
  "gateway": {
    "bind": "127.0.0.1",
    "port": 3301,
    "allowHosts": ["127.0.0.1", "localhost"],
    "allowOrigins": ["http://127.0.0.1", "http://localhost"],
    "rateLimitPerMin": 60,
    "jwt": {
      "mode": "hs256",
      "secretEnv": "MCP_GATEWAY_JWT_SECRET",
      "audience": "app.headysystems.com",
      "issuer": "headysystems.com"
    }
  },
  "governance": {
    "mode": "locked",
    "version": "v1.2.0",
    "repo": "HeadyConnection-Org/governance",
    "auditEnabled": true,
    "destructivePatterns": ["write", "delete", "rm", "exec", "shell", "edit_file"]
  },
  "identity": {
    "trustDomain": "headysystems.com",
    "appDomain": "app.headysystems.com",
    "assignee": "HeadySystems Inc.",
    "inventor": "HeadyConnection & HeadySystems Team"
  }
}
