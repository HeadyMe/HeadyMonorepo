{
  "name": "@heady/manager",
  "version": "1.0.0",
  "description": "Heady Sacred Geometry Ecosystem - Hybrid Node.js/Python MCP Server",
  "main": "heady-manager.js",
  "scripts": {
    "start": "node heady-manager.js",
    "dev": "nodemon heady-manager.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:mcp": "jest tests/mcp.test.js",
    "build": "echo \"Build complete\"",
    "lint": "eslint *.js src/**/*.js backend/src/**/*.js",
    "docker:build": "docker build -t heady-systems .",
    "docker:run": "docker run -p 3300:3300 heady-systems",
    "admin:dev": "nodemon heady-manager.js",
    "admin:build": "echo \"Admin UI build complete (static files)\"",
    "admin:start": "node heady-manager.js",
    "admin:open": "./scripts/bin/admin-open",
    "admin:test": "./scripts/bin/test-admin-functional",
    "admin:test:security": "./scripts/bin/test-admin-security",
    "admin:test:all": "./scripts/bin/test-admin-security && ./scripts/bin/test-admin-functional",
    "secrets:generate": "./scripts/bin/generate-api-key",
    "secrets:validate": "./scripts/bin/validate-env",
    "secrets:list": "./scripts/bin/list-secrets",
    "env:setup": "cp .env.example .env && echo \"Please edit .env with your secrets\" && ./scripts/bin/validate-env"
  },
  "keywords": [
    "mcp",
    "sacred-geometry",
    "heady",
    "cognitive-interleaving",
    "model-context-protocol"
  ],
  "author": "Heady Systems",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "bull": "^4.11.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "@huggingface/inference": "^2.6.2",
    "imap-simple": "^5.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.6.9",
    "monaco-editor": "^0.43.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.0.0",
    "python-shell": "^5.0.0",
    "request": "^2.88.2",
    "socket.io": "^4.6.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
