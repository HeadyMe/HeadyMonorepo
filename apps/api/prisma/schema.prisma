generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  role          UserRole  @default(USER)
  organization  Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  tasks         Task[]
  projects      ProjectMember[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Organization {
  id          String    @id @default(cuid())
  name        String
  type        OrgType
  users       User[]
  projects    Project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Project {
  id           String    @id @default(cuid())
  name         String
  description  String?
  organization Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  members      ProjectMember[]
  tasks        Task[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model ProjectMember {
  id        String    @id @default(cuid())
  project   Project   @relation(fields: [projectId], references: [id])
  projectId String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  role      ProjectRole @default(MEMBER)
  createdAt DateTime  @default(now())
  
  @@unique([projectId, userId])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(PENDING)
  priority    Priority   @default(MEDIUM)
  project     Project    @relation(fields: [projectId], references: [id])
  projectId   String
  assignee    User?      @relation(fields: [assigneeId], references: [id])
  assigneeId  String?
  automation  AutomationConfig?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AutomationConfig {
  id          String    @id @default(cuid())
  task        Task      @relation(fields: [taskId], references: [id])
  taskId      String    @unique
  type        AutomationType
  config      Json
  enabled     Boolean   @default(true)
  lastRun     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  USER
  GUEST
}

enum OrgType {
  NONPROFIT
  COMMERCIAL
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AutomationType {
  BROWSER_HEADLESS
  BROWSER_INTERACTIVE
  API_CALL
  SCHEDULED
  DRUPAL_SYNC
}

// Content Management Models for Hybrid Drupal CMS
model Content {
  id            String      @id @default(cuid())
  title         String
  slug          String      @unique
  body          String?
  excerpt       String?
  status        ContentStatus @default(DRAFT)
  contentType   ContentType @default(ARTICLE)
  
  // Drupal Integration
  drupalNid     String?     @unique  // Drupal Node ID
  drupalSyncAt  DateTime?           // Last sync timestamp
  drupalUrl     String?             // Source Drupal URL
  
  // Taxonomy
  tags          Tag[]
  categories    Category[]
  
  // Metadata
  author        User        @relation(fields: [authorId], references: [id])
  authorId      String
  publishedAt   DateTime?
  
  // SEO
  metaTitle     String?
  metaDescription String?
  featuredImage String?
  
  // Organization
  organization  Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Tag {
  id            String    @id @default(cuid())
  name          String    @unique
  slug          String    @unique
  contents      Content[]
  createdAt     DateTime  @default(now())
}

model Category {
  id            String    @id @default(cuid())
  name          String
  slug          String    @unique
  description   String?
  parentId      String?
  parent        Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children      Category[] @relation("CategoryHierarchy")
  contents      Content[]
  organization  Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  createdAt     DateTime  @default(now())
  
  @@unique([name, organizationId])
}

model DrupalSyncLog {
  id            String    @id @default(cuid())
  operation     String    // 'import', 'export', 'update', 'delete'
  contentType   String    // 'article', 'page', 'media'
  drupalNid     String?   // Drupal Node ID involved
  status        SyncStatus @default(PENDING)
  message       String?   // Error message or success details
  details       Json?     // Additional sync metadata
  
  createdAt     DateTime  @default(now())
  completedAt   DateTime?
}

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  SCHEDULED
}

enum ContentType {
  ARTICLE
  PAGE
  MEDIA
  DOCUMENT
}

enum SyncStatus {
  PENDING
  IN_PROGRESS
  SUCCESS
  FAILED
  PARTIAL
}
