#!/bin/bash
# Admin UI Functional Test Suite
# Tests core functionality of the Admin UI

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Test configuration
TEST_HOST="${TEST_HOST:-http://localhost:3300}"
API_KEY="${HEADY_API_KEY:-test-key-12345}"
HEADERS="-H 'x-heady-api-key: $API_KEY'"

echo -e "${BLUE}================================================${NC}"
echo -e "${BLUE}  Heady Admin UI Functional Test Suite${NC}"
echo -e "${BLUE}================================================${NC}"
echo ""

TESTS_PASSED=0
TESTS_FAILED=0
TESTS_TOTAL=0

# Test function
test_endpoint() {
    local test_name="$1"
    local test_cmd="$2"
    local validation="$3"
    
    TESTS_TOTAL=$((TESTS_TOTAL + 1))
    echo -n "Test $TESTS_TOTAL: $test_name ... "
    
    response=$(eval "$test_cmd" 2>/dev/null || echo "ERROR")
    
    if eval "$validation"; then
        echo -e "${GREEN}PASS${NC}"
        TESTS_PASSED=$((TESTS_PASSED + 1))
        return 0
    else
        echo -e "${RED}FAIL${NC}"
        echo "  Response: $response"
        TESTS_FAILED=$((TESTS_FAILED + 1))
        return 1
    fi
}

echo -e "${YELLOW}=== Health Check Endpoints ===${NC}"
echo ""

test_endpoint "Health endpoint returns OK" \
    "curl -s $TEST_HOST/api/health | jq -r '.ok'" \
    '[ "$response" = "true" ]'

test_endpoint "Pulse endpoint returns system info" \
    "curl -s $TEST_HOST/api/pulse | jq -r '.ok'" \
    '[ "$response" = "true" ]'

echo ""
echo -e "${YELLOW}=== Admin API Endpoints ===${NC}"
echo ""

test_endpoint "List admin roots" \
    "curl -s -H 'x-heady-api-key: $API_KEY' $TEST_HOST/api/admin/roots | jq -r '.ok'" \
    '[ "$response" = "true" ]'

test_endpoint "List files in root" \
    "curl -s -H 'x-heady-api-key: $API_KEY' '$TEST_HOST/api/admin/files?root=root-1&path=' | jq -r '.ok'" \
    '[ "$response" = "true" ]'

test_endpoint "Read README.md file" \
    "curl -s -H 'x-heady-api-key: $API_KEY' '$TEST_HOST/api/admin/file?root=root-1&path=README.md' | jq -r '.ok'" \
    '[ "$response" = "true" ]'

echo ""
echo -e "${YELLOW}=== Configuration Endpoints ===${NC}"
echo ""

test_endpoint "Get render.yaml config" \
    "curl -s -H 'x-heady-api-key: $API_KEY' $TEST_HOST/api/admin/config/render-yaml | jq -r '.ok'" \
    '[ "$response" = "true" ]'

test_endpoint "Get MCP config (with secret masking)" \
    "curl -s -H 'x-heady-api-key: $API_KEY' $TEST_HOST/api/admin/config/mcp | jq -r '.ok'" \
    '[ "$response" = "true" ]'

echo ""
echo -e "${YELLOW}=== Operations Endpoints ===${NC}"
echo ""

test_endpoint "List operations" \
    "curl -s -H 'x-heady-api-key: $API_KEY' $TEST_HOST/api/admin/ops | jq -r '.ok'" \
    '[ "$response" = "true" ]'

echo ""
echo -e "${YELLOW}=== Response Format Validation ===${NC}"
echo ""

# Validate response structure
echo -n "Test $((TESTS_TOTAL + 1)): Admin roots response has correct structure ... "
TESTS_TOTAL=$((TESTS_TOTAL + 1))
response=$(curl -s -H "x-heady-api-key: $API_KEY" "$TEST_HOST/api/admin/roots")
if echo "$response" | jq -e '.ok and .roots' >/dev/null 2>&1; then
    echo -e "${GREEN}PASS${NC}"
    TESTS_PASSED=$((TESTS_PASSED + 1))
else
    echo -e "${RED}FAIL${NC}"
    TESTS_FAILED=$((TESTS_FAILED + 1))
fi

echo -n "Test $((TESTS_TOTAL + 1)): File list response includes items ... "
TESTS_TOTAL=$((TESTS_TOTAL + 1))
response=$(curl -s -H "x-heady-api-key: $API_KEY" "$TEST_HOST/api/admin/files?root=root-1&path=")
if echo "$response" | jq -e '.ok and .entries' >/dev/null 2>&1; then
    echo -e "${GREEN}PASS${NC}"
    TESTS_PASSED=$((TESTS_PASSED + 1))
else
    echo -e "${RED}FAIL${NC}"
    TESTS_FAILED=$((TESTS_FAILED + 1))
fi

echo -n "Test $((TESTS_TOTAL + 1)): File content includes SHA hash ... "
TESTS_TOTAL=$((TESTS_TOTAL + 1))
response=$(curl -s -H "x-heady-api-key: $API_KEY" "$TEST_HOST/api/admin/file?root=root-1&path=README.md")
if echo "$response" | jq -e '.sha' >/dev/null 2>&1; then
    echo -e "${GREEN}PASS${NC}"
    TESTS_PASSED=$((TESTS_PASSED + 1))
else
    echo -e "${RED}FAIL${NC}"
    TESTS_FAILED=$((TESTS_FAILED + 1))
fi

echo ""
echo -e "${YELLOW}=== Error Handling ===${NC}"
echo ""

test_endpoint "Returns error for non-existent file" \
    "curl -s -H 'x-heady-api-key: $API_KEY' '$TEST_HOST/api/admin/file?root=root-1&path=non-existent-file.txt' | jq -r '.ok'" \
    '[ "$response" = "false" ]'

test_endpoint "Returns 400 for invalid root" \
    "curl -s -o /dev/null -w '%{http_code}' -H 'x-heady-api-key: $API_KEY' '$TEST_HOST/api/admin/files?root=invalid&path=/'" \
    '[ "$response" = "400" ]'

echo ""
echo -e "${BLUE}================================================${NC}"
echo -e "${BLUE}  Test Summary${NC}"
echo -e "${BLUE}================================================${NC}"
echo ""
echo "Total Tests: $TESTS_TOTAL"
echo -e "${GREEN}Passed: $TESTS_PASSED${NC}"
if [ $TESTS_FAILED -gt 0 ]; then
    echo -e "${RED}Failed: $TESTS_FAILED${NC}"
else
    echo -e "${GREEN}Failed: 0${NC}"
fi
echo ""

# Calculate success rate
SUCCESS_RATE=$((TESTS_PASSED * 100 / TESTS_TOTAL))
echo "Success Rate: ${SUCCESS_RATE}%"
echo ""

# Exit code based on results
if [ $TESTS_FAILED -gt 0 ]; then
    echo -e "${RED}Some tests failed!${NC}"
    exit 1
else
    echo -e "${GREEN}All tests passed!${NC}"
    exit 0
fi
