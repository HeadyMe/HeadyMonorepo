#!/bin/bash
# Admin UI Security Test Suite
# Tests authentication, authorization, and security controls

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Test configuration
TEST_HOST="${TEST_HOST:-http://localhost:3300}"
VALID_API_KEY="${HEADY_API_KEY:-test-key-12345}"
INVALID_API_KEY="invalid-key-wrong"

echo -e "${BLUE}================================================${NC}"
echo -e "${BLUE}  Heady Admin UI Security Test Suite${NC}"
echo -e "${BLUE}================================================${NC}"
echo ""
echo "Target: $TEST_HOST"
echo "API Key: ${VALID_API_KEY:0:8}... (masked)"
echo ""

# Test counter
TESTS_PASSED=0
TESTS_FAILED=0
TESTS_TOTAL=0

# Test function
run_test() {
    local test_name="$1"
    local test_cmd="$2"
    local expected_code="$3"
    
    TESTS_TOTAL=$((TESTS_TOTAL + 1))
    echo -n "Test $TESTS_TOTAL: $test_name ... "
    
    # Run the test and capture response code
    response_code=$(eval "$test_cmd" 2>/dev/null || echo "000")
    
    if [ "$response_code" = "$expected_code" ]; then
        echo -e "${GREEN}PASS${NC} (HTTP $response_code)"
        TESTS_PASSED=$((TESTS_PASSED + 1))
    else
        echo -e "${RED}FAIL${NC} (Expected $expected_code, got $response_code)"
        TESTS_FAILED=$((TESTS_FAILED + 1))
    fi
}

echo -e "${YELLOW}=== Public Endpoints (No Auth Required) ===${NC}"
echo ""

run_test "Health endpoint accessible" \
    "curl -s -o /dev/null -w '%{http_code}' $TEST_HOST/api/health" \
    "200"

run_test "Pulse endpoint accessible" \
    "curl -s -o /dev/null -w '%{http_code}' $TEST_HOST/api/pulse" \
    "200"

run_test "Admin UI page accessible" \
    "curl -s -o /dev/null -w '%{http_code}' $TEST_HOST/admin.html" \
    "200"

echo ""
echo -e "${YELLOW}=== Authentication Tests ===${NC}"
echo ""

run_test "Admin API requires authentication" \
    "curl -s -o /dev/null -w '%{http_code}' $TEST_HOST/api/admin/roots" \
    "401"

run_test "Admin API rejects invalid key" \
    "curl -s -o /dev/null -w '%{http_code}' -H 'x-heady-api-key: $INVALID_API_KEY' $TEST_HOST/api/admin/roots" \
    "401"

run_test "Admin API accepts valid key" \
    "curl -s -o /dev/null -w '%{http_code}' -H 'x-heady-api-key: $VALID_API_KEY' $TEST_HOST/api/admin/roots" \
    "200"

run_test "Admin API accepts Bearer token format" \
    "curl -s -o /dev/null -w '%{http_code}' -H 'Authorization: Bearer $VALID_API_KEY' $TEST_HOST/api/admin/roots" \
    "200"

echo ""
echo -e "${YELLOW}=== Security Headers Tests ===${NC}"
echo ""

# Test security headers
echo -n "Test $((TESTS_TOTAL + 1)): Security headers present ... "
TESTS_TOTAL=$((TESTS_TOTAL + 1))
headers=$(curl -s -I "$TEST_HOST/api/health" 2>/dev/null)
if echo "$headers" | grep -q "X-Content-Type-Options: nosniff" && \
   echo "$headers" | grep -q "X-Frame-Options: DENY"; then
    echo -e "${GREEN}PASS${NC}"
    TESTS_PASSED=$((TESTS_PASSED + 1))
else
    echo -e "${RED}FAIL${NC}"
    TESTS_FAILED=$((TESTS_FAILED + 1))
fi

echo ""
echo -e "${YELLOW}=== Authorization Tests ===${NC}"
echo ""

run_test "File browser requires auth" \
    "curl -s -o /dev/null -w '%{http_code}' '$TEST_HOST/api/admin/files?root=main&path=/'" \
    "401"

run_test "File read requires auth" \
    "curl -s -o /dev/null -w '%{http_code}' '$TEST_HOST/api/admin/file?root=main&path=README.md'" \
    "401"

run_test "Config endpoints require auth" \
    "curl -s -o /dev/null -w '%{http_code}' $TEST_HOST/api/admin/config/mcp" \
    "401"

run_test "Build endpoint requires auth" \
    "curl -s -X POST -o /dev/null -w '%{http_code}' $TEST_HOST/api/admin/build" \
    "401"

echo ""
echo -e "${YELLOW}=== Data Validation Tests ===${NC}"
echo ""

# Test with valid auth
echo -n "Test $((TESTS_TOTAL + 1)): API response is valid JSON ... "
TESTS_TOTAL=$((TESTS_TOTAL + 1))
response=$(curl -s -H "x-heady-api-key: $VALID_API_KEY" "$TEST_HOST/api/admin/roots")
if echo "$response" | jq . >/dev/null 2>&1; then
    echo -e "${GREEN}PASS${NC}"
    TESTS_PASSED=$((TESTS_PASSED + 1))
else
    echo -e "${RED}FAIL${NC}"
    TESTS_FAILED=$((TESTS_FAILED + 1))
fi

echo -n "Test $((TESTS_TOTAL + 1)): Config endpoint masks secrets ... "
TESTS_TOTAL=$((TESTS_TOTAL + 1))
config=$(curl -s -H "x-heady-api-key: $VALID_API_KEY" "$TEST_HOST/api/admin/config/mcp")
if echo "$config" | grep -q "***" || echo "$config" | grep -q "REDACTED"; then
    echo -e "${GREEN}PASS${NC}"
    TESTS_PASSED=$((TESTS_PASSED + 1))
else
    echo -e "${YELLOW}SKIP${NC} (No secrets to mask)"
fi

echo ""
echo -e "${YELLOW}=== Rate Limiting Tests ===${NC}"
echo ""

echo -n "Test $((TESTS_TOTAL + 1)): Rate limit headers present ... "
TESTS_TOTAL=$((TESTS_TOTAL + 1))
headers=$(curl -s -I "$TEST_HOST/api/pulse" 2>/dev/null)
if echo "$headers" | grep -q "X-RateLimit-Limit"; then
    echo -e "${GREEN}PASS${NC}"
    TESTS_PASSED=$((TESTS_PASSED + 1))
else
    echo -e "${RED}FAIL${NC}"
    TESTS_FAILED=$((TESTS_FAILED + 1))
fi

echo ""
echo -e "${YELLOW}=== Path Traversal Protection ===${NC}"
echo ""

run_test "Rejects path traversal attempt" \
    "curl -s -o /dev/null -w '%{http_code}' -H 'x-heady-api-key: $VALID_API_KEY' '$TEST_HOST/api/admin/files?root=main&path=../../etc/passwd'" \
    "400"

echo ""
echo -e "${BLUE}================================================${NC}"
echo -e "${BLUE}  Test Summary${NC}"
echo -e "${BLUE}================================================${NC}"
echo ""
echo "Total Tests: $TESTS_TOTAL"
echo -e "${GREEN}Passed: $TESTS_PASSED${NC}"
if [ $TESTS_FAILED -gt 0 ]; then
    echo -e "${RED}Failed: $TESTS_FAILED${NC}"
else
    echo -e "${GREEN}Failed: 0${NC}"
fi
echo ""

# Exit code based on results
if [ $TESTS_FAILED -gt 0 ]; then
    echo -e "${RED}Some tests failed!${NC}"
    exit 1
else
    echo -e "${GREEN}All tests passed!${NC}"
    exit 0
fi
