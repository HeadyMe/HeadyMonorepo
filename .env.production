# Heady Production Environment Configuration
# Generated: 2025-01-30

# Core Configuration
NODE_ENV=production
PORT=3300
BACKEND_PORT=4000

# Security Keys (MUST BE SET BEFORE DEPLOYMENT)
HEADY_API_KEY=${HEADY_API_KEY}
JWT_SECRET=${JWT_SECRET}
MCP_GATEWAY_JWT_SECRET=${MCP_GATEWAY_JWT_SECRET}

# Hugging Face Configuration
HF_TOKEN=${HF_TOKEN}
HF_TEXT_MODEL=meta-llama/Llama-2-7b-chat-hf
HF_EMBED_MODEL=sentence-transformers/all-mpnet-base-v2
HF_MAX_CONCURRENCY=10

# MCP Services Configuration
MCP_GRAPH_PORT=3301
MCP_METRICS_PORT=3302
MCP_WORKFLOW_PORT=3303
MCP_GATEWAY_PORT=3304

# Admin Configuration
HEADY_ADMIN_ROOT=/app
HEADY_ADMIN_ALLOWED_PATHS=/app/src,/app/public
HEADY_ADMIN_MAX_BYTES=10485760
HEADY_ADMIN_ENABLE_GPU=false

# Rate Limiting
HEADY_RATE_LIMIT_WINDOW_MS=60000
HEADY_RATE_LIMIT_MAX=100

# CORS Configuration
HEADY_CORS_ORIGINS=https://heady.systems,https://app.heady.systems

# Database Configuration (if using)
DATABASE_URL=${DATABASE_URL}

# Monitoring
ENABLE_MONITORING=true
METRICS_EXPORT_INTERVAL=10000
LOG_LEVEL=info

# GPU Configuration (optional)
REMOTE_GPU_HOST=${REMOTE_GPU_HOST}
REMOTE_GPU_PORT=${REMOTE_GPU_PORT}
GPU_MEMORY_LIMIT=8192
ENABLE_GPUDIRECT=false

# Trust Domain Configuration
HEADY_TRUST_DOMAIN=heady.systems
HEADY_APP_DOMAIN=app.heady.systems

# Feature Flags
ENABLE_MCP_SERVICES=true
ENABLE_ADMIN_UI=true
ENABLE_HEALTH_CHECKS=true
ENABLE_AUDIT_LOGGING=true
