# Heady Ecosystem - Environment Configuration

# ============================================================================
# Core Configuration
# ============================================================================
NODE_ENV=development
PORT=3300
LOG_LEVEL=info

# ============================================================================
# Authentication & Security
# ============================================================================
HEADY_API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgresql://heady:password@localhost:5432/heady
MYSQL_DATABASE=heady
MYSQL_USER=heady
MYSQL_PASSWORD=your-mysql-password
MYSQL_ROOT_PASSWORD=your-mysql-root-password

# ============================================================================
# Redis Cache
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================================================
# AI Providers
# ============================================================================
# Hugging Face
HF_TOKEN=your-huggingface-token
HF_TEXT_MODEL=gpt2
HF_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
HF_MAX_CONCURRENCY=5

# Perplexity
PERPLEXITY_API_KEY=your-perplexity-api-key
PERPLEXITY_API_URL=https://api.perplexity.ai

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_URL=https://generativelanguage.googleapis.com

# Jules
JULES_API_KEY=your-jules-api-key
JULES_API_URL=https://api.jules.ai

# Primary AI Provider
AI_PRIMARY_PROVIDER=perplexity

# ============================================================================
# 1Password Integration
# ============================================================================
OP_SERVICE_ACCOUNT_TOKEN=your-1password-token
OP_VAULT=Private

# ============================================================================
# Cloudflare
# ============================================================================
TUNNEL_TOKEN=your-cloudflare-tunnel-token
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_ZONE_ID=your-zone-id

# ============================================================================
# Admin UI
# ============================================================================
HEADY_ADMIN_ROOT=/app
HEADY_ADMIN_ALLOWED_PATHS=/app,/shared
HEADY_ADMIN_ENABLE_GPU=false

# ============================================================================
# GPU Configuration (Optional)
# ============================================================================
REMOTE_GPU_HOST=localhost
REMOTE_GPU_PORT=8000
GPU_MEMORY_LIMIT=8192

# ============================================================================
# Rate Limiting
# ============================================================================
HEADY_RATE_LIMIT_WINDOW_MS=60000
HEADY_RATE_LIMIT_MAX=100

# ============================================================================
# CORS
# ============================================================================
HEADY_CORS_ORIGINS=http://localhost:3000,http://localhost:3300,http://localhost:8080

# ============================================================================
# Deployment
# ============================================================================
RENDER_DEPLOY_HOOK_URL=your-render-deploy-hook-url

# ============================================================================
# Monitoring & Observability
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_HEADY_VINCI=true
ENABLE_ARENA_MODE=true
ENABLE_AUTO_MERGE=true

# ============================================================================
# MCP Configuration
# ============================================================================
MCP_SERVER_PORT=3301
MCP_ENABLE_FILESYSTEM=true
MCP_ENABLE_GIT=true
MCP_ENABLE_POSTGRES=true

# ============================================================================
# Build Configuration
# ============================================================================
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ============================================================================
# Development
# ============================================================================
DEBUG=heady:*
VERBOSE=false
